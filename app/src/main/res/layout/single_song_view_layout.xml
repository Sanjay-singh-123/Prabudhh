<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:alpha=".89"
    android:background="@drawable/play_song_view">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/song_thumbnail_two"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:id="@+id/song_name_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/song_thumbnail_two"
        android:text="@string/song_name"
        android:textColor="@color/colorWhite"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/song_artiest_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_name_two"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/song_thumbnail_two"
        android:text="@string/artist_name"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_bar"
        style="@style/SpinKitView.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        app:SpinKit_Color="@color/colorPrimary" />


</RelativeLayout>